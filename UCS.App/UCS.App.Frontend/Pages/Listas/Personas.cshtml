@page
@model UCS.App.Frontend.Pages.PersonasModel
@{
}


<h1 href="#Directivos" data-toggle="collapse">Lista de Directivos</h1>
<div class="collapse" id="Directivos" >
<table class="table">
    
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Unidad Que desempeña </th>
        <th>detalles </th>
        
    </tr>

@foreach (var Directivo in Model.Directivos)
{
    <tr>
            <td>@Directivo.id</td>
            <td>@Directivo.nombre</td>
            <td>@Directivo.apellido</td>
            <td>@Directivo.unidadDesempeña </td>
            

            <td>
                <a class="btn btn-primary table-btn" asp-page="./DetallesDirectivos" asp-route-directivoId="@Directivo.id">
                    <i class="fas fa-info-circle"></i> Detalle Directivo
                </a>
            </td>
    </tr>
}

</table>
</div>

<h1 href="#Profesores" data-toggle="collapse">Lista de Profesores</h1>
<div class="collapse" id="Profesores" >
<table class="table">
    
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Departamento </th>
        <th>Materia </th>
        <th>detalles </th>
    </tr>
@foreach (var profesor in Model.Profesores)
{
    <tr>
            <td>@profesor.id</td>
            <td>@profesor.nombre</td>
            <td>@profesor.apellido</td>
            <td>@profesor.departamento </td>
            <td>@profesor.materia </td>
            
            <td>
                <a class="btn btn-primary table-btn" asp-page="./DetallesProfesores" asp-route-profesoresId="@profesor.id">
                    <i class="fas fa-info-circle"></i> Detalle Profesor
                </a>
            </td>

            <td>
                <a class="btn btn-secondary table-btn" asp-page="./EditarProfesores" asp-route-profesoresId="@profesor.id">
                    <i class="fas fa-info-circle"></i> Editar Profesor
                </a>
            </td>
            <td>
                <a class="btn btn-danger table-btn" asp-page="./EliminarProfesores" asp-route-profesoresId="@profesor.id">
                    <i class="fas fa-info-circle"></i> Eliminar Profesor
                </a>
            </td>
    </tr>
}
</table>
<a asp-page=".\EditarProfesores" class="btn btn-primary">Adicionar Profesor</a>
</div>

